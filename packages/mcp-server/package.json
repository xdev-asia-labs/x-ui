{
    "name": "@xdev-asia/x-ui-mcp-server",
    "version": "0.0.2",
    "description": "MCP Server for X-UI component generation and assistance",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/xdev-asia-labs/x-ui.git",
        "directory": "packages/mcp-server"
    },
    "homepage": "https://x-ui.xdev.asia/docs/getting-started/mcp",
    "keywords": [
        "mcp",
        "model-context-protocol",
        "x-ui",
        "react",
        "ui-components",
        "ai-assistant",
        "copilot"
    ],
    "main": "./dist/index.js",
    "bin": {
        "x-ui-mcp": "./dist/index.js"
    },
    "files": [
        "dist",
        "README.md"
    ],
    "scripts": {
        "prebuild": "node scripts/generate-component-list.js",
        "build": "tsup",
        "dev": "tsup --watch",
        "start": "node dist/index.js",
        "generate-components": "node scripts/generate-component-list.js"
    },
    "mcp": {
        "name": "X-UI",
        "description": "Generate X-UI components, get design tokens, and usage examples for React",
        "icon": "https://x-ui.xdev.asia/icon.png",
        "publisher": "xdev-asia"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.0.0"
    },
    "devDependencies": {
        "@types/node": "^22.0.0",
        "tsup": "^8.3.0",
        "typescript": "^5.7.0"
    }
}