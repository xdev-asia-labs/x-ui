        "clean": "rm -rf dist"
    },
    "dependencies": {
        "@xdev-asia/x-ui-core": "workspace:*"
    },
    "devDependencies": {
        "@types/react": "^18.3.0",
        "@types/react-dom": "^18.3.0",
        "react": "^18.3.0",
        "react-dom": "^18.3.0",
        "tsup": "^8.3.0",
        "typescript": "^5.7.0",
        "vitest": "^2.1.0"
    },
    "peerDependencies": {
        "react": ">=18.0.0",
        "react-dom": ">=18.0.0"
    }
}