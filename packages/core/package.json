{
    "name": "@xdev-asia/x-ui-core",
    "version": "0.0.3",
    "description": "Core utilities, tokens and hooks for X-UI",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        },
        "./tokens": {
            "types": "./dist/tokens/index.d.ts",
            "import": "./dist/tokens/index.mjs",
            "require": "./dist/tokens/index.js"
        }
    },
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "typecheck": "tsc --noEmit",
        "test": "vitest run",
        "clean": "rm -rf dist"
    },
    "devDependencies": {
        "@types/react": "^18.3.0",
        "tsup": "^8.3.0",
        "typescript": "^5.7.0",
        "vitest": "^2.1.0"
    },
    "peerDependencies": {
        "react": ">=18.0.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "dist"
    ],
    "keywords": [
        "ui",
        "react",
        "components",
        "theme",
        "tokens"
    ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/xdev-asia-labs/x-ui"
    }
}
